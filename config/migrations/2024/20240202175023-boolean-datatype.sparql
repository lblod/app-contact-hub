PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

DELETE {
  GRAPH ?g {
    ?s ?p ?o .
  }
} INSERT {
  GRAPH ?g {
    ?s ?p ?newLiteral .
  }
} WHERE {
  GRAPH ?g {
    ?s ?p ?o .
    FILTER (datatype(?o) = <http://mu.semte.ch/vocabularies/typed-literals/boolean>)
    BIND (STRDT(STR(?o), xsd:boolean) AS ?newLiteral)
  }
}