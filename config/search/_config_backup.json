            "mappings": {
              "properties": {
                "contacts.email": { "type" : "text" },
                "contacts.telephone": { "type" : "text" },
                "contacts.website": { "type" : "text" },
                "contacts.contact-address": { "type" : "text" },
                "people.given-name": { "type" : "text" },
                "position.general-role": { "type" : "text" },
